#!/usr/bin/env ruby

require 'fileutils'

ENV["RAILS_ENV"] ||= ENV["RACK_ENV"] || "production"

url = ARGV[0]
unless url
  puts 'missing url'
  return
end

import_dir = File.join('tmp', 'csv')

FileUtils.mkdir_p import_dir
Dir.chdir(import_dir) do
  exec "wget #{url}"
end

exec "RAILS_ENV=#{ENV["RAILS_ENV"]} bin/rake import:contracts"
