var player = document.getElementById("bench_player_<%= @spot.player_id %>");
if (player) {
  player.parentNode.removeChild(player);
}

var form = document.getElementById("spot_batting_order_<%= spot.batting_order %>_form");
if (form) {
  form.outerHTML = "<%= j render('lineups/batting_spot_form', lineup: lineup, team: team, spot: spot) %>";
}

var event = new Event('custom:reload-forms');
document.dispatchEvent(event);
