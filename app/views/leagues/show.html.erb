<%= breadcrumbs([['Home', root_path]]) %>

<div class="columns page-header">
  <div class="first-column">
    <%= content_tag :h1, @league.full_name, class: 'league-name' %>
  </div>

  <div class="second-column">
    <p>
      <%= link_to 'League Settings', edit_league_path(@league),
                  class: 'button' %>
    </p>
  </div>
</div>

<div class="teams cards">
  <%= render @teams, league: @league %>
  <%= render 'teams/new', league: @league %>
</div>
