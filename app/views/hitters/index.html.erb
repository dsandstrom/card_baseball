<% if @team %>
  <%= league_team_breadcrumbs(@league, @team) %>
<% end %>

<div class="page-header">
  <div class="columns">
    <div class="first-column">
      <% if @team %>
        <%= content_tag :h1, 'Hitters' %>
      <% else %>
        <%= content_tag :h1, 'All Hitters' %>
      <% end %>
    </div>
  </div>

  <%= team_nav(@team) if @team %>
</div>

<%= render 'hitters/filter_form' %>

<%= render 'hitters/hitters', hitters: @hitters,
                              show_team: @team.nil? %>
