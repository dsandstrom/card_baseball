<%
  table_index ||= nil
  highlight ||= nil
%>

<tr class="hitter" id="hitter_<%= hitter.id %>">
  <% if table_index.present? %>
    <%= content_tag :td, table_index, class: 'table-index' %>
  <% end %>
  <td><%= link_to hitter.roster_name, hitter, class: 'hitter-name' %></td>
  <td><%= hitter.bats %></td>
  <td><%= hitter.speed %></td>
  <td><%= hitter.bunt_grade %></td>
  <td><%= hitter.primary_position_initial %></td>
  <td><%= hitter.overall_rating %></td>
  <td><%= hitter.durability %></td>
  <%= left_td hitter.left_rating, highlight: highlight, class: 'left-border' %></td>
  <%= left_td hitter.left_on_base_percentage, highlight: highlight %></td>
  <%= left_td hitter.left_slugging, highlight: highlight %></td>
  <%= left_td hitter.left_homeruns, highlight: highlight %></td>
  <%= right_td hitter.right_rating, class: 'left-border', highlight: highlight %>
  <%= right_td hitter.right_on_base_percentage, highlight: highlight %>
  <%= right_td hitter.right_slugging, highlight: highlight %>
  <%= right_td hitter.right_homeruns, highlight: highlight %>
  <td class="left-border">
    <% if hitter.catcher_defense && hitter.catcher_defense > -10 %>
      <%= format_defense(hitter.catcher_defense) %><span class="defense-bar">/<%= hitter.catcher_bar || 0 %></span>
    <% else %>
      <%= format_defense(hitter.catcher_defense) %>
    <% end %>
  </td>
  <td><%= format_defense(hitter.first_base_defense) %></td>
  <td><%= format_defense(hitter.second_base_defense) %></td>
  <td><%= format_defense(hitter.third_base_defense) %></td>
  <td><%= format_defense(hitter.shortstop_defense) %></td>
  <td><%= format_defense(hitter.outfield_defense) %></td>
  <td><%= format_defense(hitter.center_field_defense) %></td>
  <td>
    <% if hitter.pitcher_defense && hitter.pitcher_defense > -10 %>
      <%= format_defense(hitter.pitcher_defense) %><span class="defense-bar">/<%= hitter.pitcher_bar || 0 %></span>
    <% else %>
      <%= format_defense(hitter.pitcher_defense) %>
    <% end %>
  </td>
  <% if show_contract %>
    <td class="left-border"><%= render 'hitters/contract', hitter: hitter %></td>
  <% end %>
</tr>
