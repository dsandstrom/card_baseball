<%
  klass = 'rosterless-player'
  if can?(:create, new_roster)
    klass += ' draggable'
  end
%>

<%= content_tag :div, id: "rosterless_player_#{ rosterless_player.id }",
                      class: klass, data: { id: rosterless_player.id } do %>
  <%= render 'rosters/player', player: rosterless_player, show_positions: true %>
<% end %>
