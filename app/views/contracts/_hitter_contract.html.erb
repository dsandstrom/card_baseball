<% team = contract.team %>

<% if team %>
  <% league = team.league %>
  <% unless current_page?(league_team_path(team.league, team)) %>
    <%= link_to team.name, league_team_path(team.league, team) %>
  <% end %>
<% else %>
  <%= content_tag :span, 'Free Agent', class: 'no-wrap' %>
<% end %>

for <%= pluralize(contract.length, 'year') %>
