<footer class="main-footer">
  <div class="page">
    <div class="columns">
      <div class="column columns">
        <div class="column">
          <p class="app-logo">
            <%= image_tag 'logo.png' %>
          </p>
        </div>

        <div class="column">
          <h6>Card Baseball</h6>
          <ul>
            <li>
              <%= link_to 'Source Code',
                          'https://github.com/dsandstrom/card_baseball',
                          target: '_blank' %>
            </li>
            <li>
              <%= link_to 'Report Issue with App',
                          'https://cardbaseball.task-roller.net',
                          target: '_blank' %>
            </li>
          </ul>
        </div>
      </div>

      <% if user_signed_in? %>
        <div class="column">
          <h6>Navigation</h6>
          <ul>
            <li>
              <%= link_to_unless_current 'Home', root_path %>
            </li>
            <li>
              <%= link_to_unless_current 'Sitemap', sitemap_path %>
            </li>
          </ul>
        </div>
      <% end %>

      <div class="column"></div>
    </div>
  </div>
</footer>
