<% if @team %>
  <%= league_team_breadcrumbs(@league, @team) %>
  <%= enable_page_title "#{@team.name} Pitchers" %>
<% else %>
  <%= enable_page_title 'Pitchers' %>
<% end %>

<div class="page-header">
  <div class="columns">
    <div class="first-column">
      <% if @team %>
        <%= content_tag :h1, 'Pitchers' %>
      <% else %>
        <%= content_tag :h1, 'All Pitchers' %>
      <% end %>
    </div>
  </div>

  <%= team_nav(@team) if @team %>
</div>

<%= render 'pitchers/filter_form' %>

<%= render 'pitchers/pitchers', pitchers: @pitchers,
                                show_team: @team.nil? %>
