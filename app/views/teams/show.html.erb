<%= league_breadcrumbs(@league) %>

<div class="columns page-header">
  <div class="first-column">
    <div class="name-and-logo">
      <% if @team.icon.present? %>
        <div class="logo-wrapper">
          <%= image_tag @team.icon,
              alt: "#{@team.name} Icon", class: 'logo' %>
        </div>
      <% end %>

      <%= content_tag :h1, @team.name, class: 'team-name' %>
    </div>
  </div>

  <div class="second-column">
    <p>
      <%= link_to 'Team Settings', edit_league_team_path(@league, @team),
                  class: 'button' %>
    </p>
  </div>
</div>

<h2>Roster</h2>

<%= render 'hitters/hitters', hitters: @hitters,
                              show_team: false %>
