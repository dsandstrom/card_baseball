<%
  klass = 'bench-hitter'
  if can?(:create, new_spot)
    klass += ' draggable'
  end
%>

<%= content_tag :div, id: "bench_hitter_#{ bench_hitter.id }",
                      class: klass, data: { id: bench_hitter.id } do %>
  <%= content_tag :span, bench_hitter.roster_name, class: 'hitter-name' %>
  <%= content_tag :div, player_positions(bench_hitter),
                  class: 'player-positions' %>
<% end %>
